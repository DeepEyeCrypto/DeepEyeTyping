rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User data is private to the user
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Global Leaderboard
    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Phase 3: Custom Protocols Registry
    match /protocols/{protocolId} {
      // Public protocols are readable by everyone, private only by creator
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == resource.data.creatorId);
      // Only authenticated users can create protocols
      allow create: if request.auth != null;
      // Only the creator can update or delete
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.creatorId;
    }

    // Phase 3: Fleets (Teams)
    match /fleets/{fleetId} {
      // Members can read fleet metadata
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      // Any authenticated user can create a fleet
      allow create: if request.auth != null;
      // Only the owner can manage fleet metadata
      allow update: if request.auth != null && request.auth.uid == resource.data.ownerId;
      
      // Fleet Members sub-collection
      match /members/{userId} {
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/fleets/$(fleetId)).data.members;
        allow write: if request.auth != null && (request.auth.uid == userId || request.auth.uid == get(/databases/$(database)/documents/fleets/$(fleetId)).data.ownerId);
      }
    }
  }
}
